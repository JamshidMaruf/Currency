<Window x:Class="Currency.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency.Desktop"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d" Title="Currency" 
        Loaded="Window_Loaded"
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="30" 
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="22*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#797979">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0">
                        <Icon:PackIconMaterial x:Name="BackBtn"
                                               Kind="KeyboardBackspace" 
                                               VerticalAlignment="Center" 
                                               Width="20"/>
                    </Button>
                </Grid>

                <Grid Grid.Column="1">
                    <TextBlock Text="Курсы валюта"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="26"
                           Foreground="White"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="SettingButton_Click">
                        <Icon:PackIconMaterial x:Name="SettingBtn"
                                               Kind="TableSettings"/>
                    </Button>
                </Grid>
            </Grid>

            <Grid Background="#EFEFF4" Margin="-6,77,10,5" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="298*"/>
                    <ColumnDefinition Width="113*"/>
                    <ColumnDefinition Width="185*"/>
                </Grid.ColumnDefinitions>

                <Grid Margin="282,2,22,2" Grid.ColumnSpan="2">
                    <TextBlock x:Name="previousDay"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="9*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="-35,0,35,0" Grid.RowSpan="3"/>
                    <TextBlock x:Name="today"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="18" Margin="0,13,0,0" Grid.RowSpan="2"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ItemsControl Name="CurrenciesList"/>
                </ScrollViewer>
            </Grid>
            <Frame x:Name="InputerArea" Grid.Row="2" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
