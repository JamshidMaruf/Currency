<Window x:Class="Currency.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency.Desktop"
        mc:Ignorable="d"
        Title="Currency" Height="700" Width="600" Background="White">
    <Window.Resources>
        <Image x:Key="Setting-icon" Source="Resources\Images\setting.png"/>
        <Image x:Key="Back-icon" Source="Resources\Images\back.png"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#797979">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button Content="{StaticResource Back-icon}"
                        Margin="3,3,7,6"
                        FontSize="30"
                        Background="#797979"
                        Foreground="White"/>
            </Grid>
            
            <Grid Grid.Column="1">
                <TextBlock Text="Курсы валюта"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="26"
                           Foreground="White"/>
            </Grid>

            <Grid Grid.Column="2">
                <Button Name="SettingBtn"
                        Click="SettingBtn_Click"
                        Margin="3,3,7,5"
                        Content="{StaticResource Setting-icon}"
                        FontSize="30"
                        Background="#797979"
                        Foreground="#797979"
                        BorderThickness="3"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Background="#EFEFF4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Label Content="12.06.2022"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22"/>
            </Grid>

            <Grid Grid.Column="2">
                <Label Content="13.06.2022"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ItemsControl Name="CurrenciesList"/>
            </ScrollViewer>
        </Grid>
        <Frame x:Name="InputerArea" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
